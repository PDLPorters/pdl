}

',
        Code =>
           init_vars( { vars => 'PDL_Double *tmp, kk; int count;',
                        malloc => 'tmp = malloc(p_size*q_size*sizeof(PDL_Double));',
                        check => '(tmp==NULL) || ' } ) .
           init_map("i") .
           init_map("j") .
'
           threadloop %{
           for(j=0; j<n_size; j++) {
              for(i=0; i<m_size; i++) {
                 count = 0;
                 for(j1=0; j1<q_size; j1++) {
