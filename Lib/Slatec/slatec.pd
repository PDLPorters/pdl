#
# This version of polfit accepts bad values and also allows threading
#

pp_def('polfit',
  Pars => 'x(n);y(n);w(n);int maxdeg();int [o]ndeg();[o]eps();[o]r(n);int [o]ierr();[o]a(foo);[t]xtmp(n);[t]ytmp(n);[t]wtmp(n);[t]rtmp(n)',
  OtherPars => '',
  Code => '$TFD(polfit_,dpolft_)  (&$PRIV(__n_size),$P(x),$P(y),$P(w),$P(maxdeg),$P(ndeg),$P(eps),$P(r),$P(ierr),$P(a));',
  GenericTypes => ['F','D'],
  HandleBad => 1, 
  NoBadifNaN => 1,
  BadCode => 'int ns = $SIZE(n);
              int i;
	      int j = 0;
              for (i=0;i<ns;i++) {   /* get rid of bad values.  Call polfit with [xyw]tmp instead of [xyz]. */
                if ($ISGOOD(y(n=>i))) {
                  $xtmp(n=>j) = $x(n=>i);
                  $ytmp(n=>j) = $y(n=>i);
                  $wtmp(n=>j) = $w(n=>i);
                  j++;
                }
              }
	      if (j <= $maxdeg()) {
                for (i=0;i<ns;i++) {
                  $SETBAD(r(n=>i));
                }
                $ierr() = 2;
              } else {
                $TFD(polfit_,dpolft_)  (&j,$P(xtmp),$P(ytmp),$P(wtmp),$P(maxdeg),$P(ndeg),$P(eps),$P(rtmp),$P(ierr),$P(a));
                j=0;
                for (i=0;i<ns;i++) {  /* replace bad values */
                  if ($ISGOOD(y(n=>i))) {
                    $r(n=>i) = $rtmp(n=>j);
                    j++;
                  } else {
		    $SETBAD(r(n=>i));
                  }
                }
              }',

  Doc => 'Fit discrete data in a least squares sense by polynomials
          in one variable. C<x()>, C<y()> and C<w()> must be of the same type.
	  This version handles bad values appropriately',
);

