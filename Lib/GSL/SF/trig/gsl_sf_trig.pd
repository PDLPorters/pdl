# PP interface to GSL

pp_addhdr('
#include <gsl/gsl_sf.h>

#include "../gslerr.h"

');

pp_def('gsl_sf_sin',
       GenericTypes => [D],
       Pars=>'double x(); double [o]y(); double [o]e()',
       Code =>'
gsl_sf_result r;
GSLERR(gsl_sf_sin_e,($x(),&r))
$y() = r.val;
$e() = r.err; 
',
       Doc =>'Sin(x) with GSL semantics.'
      );

