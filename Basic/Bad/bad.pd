pp_def(
    'setvaltobad',
    HandleBad => 1,
    Pars => 'a(); [o]b();',
    OtherPars => 'double value;',
    Inplace => 1,
    CopyBadStatusCode => 
    'if ( a == b && $ISPDLSTATEGOOD(a) )
       PDL->propogate_badflag( b, 1 ); /* propogate badflag if inplace */
     $SETPDLSTATEBAD(b);          /* always make sure the output is "bad" */
    ',
    Code =>
