	   Pars => 'a(); b(); [o]c();',
	   Inplace => [ 'a' ],
	   GenericTypes => [($got_complex ? @$C : ()), @$R],
	   Doc => inplace_doc( $func ),
	   Code => code_bifunc($func),
	   );
}

