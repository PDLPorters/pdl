if ($^O !~ /win32/i) {
    pp_def("lgamma",
	   HandleBad => 1,
	   Pars => 'a(); [o]b(); int[o]s()',
	   Doc => $doco{"lgamma"},
	   Code =>
	   'extern int signgam;
	    $b() = lgamma($a());
	    $s() = signgam;',     # what happens to signgam if $a() is bad?
	   BadCode => 
	   'extern int signgam;
            if ( $ISBAD(a()) ) {
               $SETBAD(b()); $SETBAD(s());
            } else {
