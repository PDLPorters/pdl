	GenericTypes => [F,D],
	Code => q@
		 PerlIO *fp;
		 IO *io;
		 PDL_Byte *buf, *bp;
		 char *spc = $COMP(space);
		 char formchar = $TFD(' ','l');
		 char formatstr[25];

		 io = GvIO(gv_fetchpv($COMP(fd),FALSE,SVt_PVIO));
