# Linear interpolation from singly dimensioned coord arrays

pp_def ('pltr1',
        Pars => 'double x(); double y(); grid(n); '
                . 'double [o] tx(); double [o] ty()',
        GenericTypes => [D],
        Doc => 'Mimics the pltr1 function of the PLplot C API, implementing '
	       . 'a linear interpolation.  The grid argument is equivalent '
	       . 'to the PLcGrid type of the C API.  It is a pdl vector of '
	       . 'length (nx + ny + 1) containing a concatenation of the x '
	       . 'and y interpolation vectors.   The first element of grid '
	       . 'contains the length nx of the x vector.',
        Code => '
          PLcGrid grid;
          double tx, ty;

          grid.xg = $P(grid) + 1;
          grid.nx = $grid(n => 0);

          grid.yg = $P(grid) + grid.nx + 1;
          grid.ny = $SIZE(n) - grid.nx - 1;

          pltr1 ($x(), $y(), &tx, &ty, (PLPointer) &grid);

          $tx() = tx;
          $ty() = ty;'
        );

# Linear interpolation from doubly dimensioned coord arrays

pp_def ('pltr2',
        Pars => 'double x(); double y(); grid(nx,ny,m); '
                . 'double [o] tx(); double [o] ty()',
        GenericTypes => [D],
        Doc => 'FIXME: documentation here!',
        Code => '
          PLcGrid2 grid;
          int i, j, size_x, size_y;
          double tx, ty;

          if ($SIZE(m) != 2)
            croak ("pltr2: third argument must be a [nx,ny,2] piddle");

          size_x = $SIZE(nx);
          size_y = $SIZE(ny);

          plAlloc2dGrid (&grid.xg, size_x, size_y);
          plAlloc2dGrid (&grid.yg, size_x, size_y);

          for (i = 0; i < size_x; i++)
            for (j = 0; j < size_y; j++) {
              grid.xg[i][j] = $grid(nx => i, ny => j, m => 0);
              grid.yg[i][j] = $grid(nx => i, ny => j, m => 1);
            }

          grid.nx = size_x;
          grid.ny = size_y;

          pltr2 ($x(), $y(), &tx, &ty, (PLPointer) &grid);

          $tx() = tx;
          $ty() = ty;

          plFree2dGrid (grid.xg, size_x, size_y);
          plFree2dGrid (grid.yg, size_x, size_y);'
        );

